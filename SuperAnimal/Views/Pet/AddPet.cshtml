@model SuperAnimal.ViewModels.Pet.AddPetViewModel
@{
    ViewData["Title"] = "AddPet";
}

<h1>AddPet</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <section>
                <form enctype="multipart/form-data" asp-controller="Pet" asp-action="AddPet" method="post">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePhoto"></label>
                        <input asp-for="ProfilePhoto" class="form-control" type="file" />
                        <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
                    </div>

                    <input asp-for="UserId" type="hidden" />

                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Add Pet </button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

